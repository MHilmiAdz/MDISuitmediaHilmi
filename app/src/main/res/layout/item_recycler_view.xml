<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/profImg"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/profImg2"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_default" />
        </androidx.cardview.widget.CardView>

         <TextView
            android:id="@+id/fullusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/profImg"
            android:maxLines="1"
            android:text="Firstname Lastname"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullusername"
            android:layout_alignStart="@+id/fullusername"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:text="email@email.com"
            android:textColor="@color/grey"
            android:textSize="10sp" />

    </RelativeLayout>

    <View
        android:layout_below="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

</RelativeLayout>